<h1>Categories</h1>

<%= form_with model: @category do |f| %>

  <div class="filed">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

  <div class="filed">
    <%= f.submit "Add Category" %>
  </div>

<% end %>

<ul>
  <% unless @categories.nil? %>
    <% @categories.each do |category| %>
      <li>
        <%= category.name %>
        <%= link_to "edit", category_path(category)  %>
        <%= link_to "delete", category_path(category), method: :delete  %>
      </li> 
    <% end %>
  <% end %>
</ul>
