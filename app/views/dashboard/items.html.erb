<h1 class="heading items-heading">Items</h1>

<table class="items-table">
  <thead>
    <tr>
      <th>Image</th>
      <th>Title</th>
      <th>Price</th>
      <th>Description</th>
      <th>Categories</th>
      <th colspan=3></th>
    </tr>
  </thead>
  <tbody>
    <% @items.each do |item| %>
    <tr>
      <td>
        <div class="image-container" style="background-image: url('<%=item.image.url%>')"></div>
      </td>
      <td class="items-table__title">
        <div>
          <%= item.title %>
        </div>
      </td>
      <td class="items-table__title">
        <div>
          <%= item.price %>
        </div>
      </td>
      <td class="items-table__description">
        <div>
          <%= item.description %>
        </div>
      </td>
      <td class="items-table__categories">
        <div>
          <ul>
            <% item.categories.pluck(:name).each do |cat| %>
              <li><%= cat %></li>
            <% end %>
          </ul>
        </div>
      </td>
      <td class="items-table__edit-link">
        <div>
          <%= link_to "Edit", edit_item_path(item), class: "btn btn-secondary"  %>
        </div>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>