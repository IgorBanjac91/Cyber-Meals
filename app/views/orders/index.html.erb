<h2>Orders</h2>

<table>
  <thead>
    <tr>
      <th>Id</th>
      <th>Date</th>
      <th>Status</th>
      
    </tr>
  </thead>
  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.id %></td>
        <td><%= pretty_format(order.created_at) %></td>
        <td><%= order.status %></td>
        <td><%= link_to "Show", order_path(order)  %></td>
      </tr>
    <% end %>
  </tbody>
</table>